{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./resources/js/api/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.vue",
    "resources/js/**/*.gql"
  ],
  "exclude": ["node_modules"],
  "files": ["shims-vue.d.ts"]
}
